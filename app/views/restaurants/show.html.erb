<div class="container mt-5">
  <h1><%= @restaurant.name %></h1>
  <ul>
    <li>Type of food: <%= @restaurant.category.capitalize %></li>
    <li>Phone Number: <%= @restaurant.phone_number %></li>
  </ul>

  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %>
  <br>
  <%= link_to "Delete this restaurant", restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Are your sure?" } %>
  <br>
  <%= link_to "Back to all restaurants", restaurants_path %>
</div>
